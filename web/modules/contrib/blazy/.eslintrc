{
  // This file extends .eslintrc at drupal root.
  // Located at /modules/contrib/blazy, run:
  // eslint . -o ../../eslint/blazy.html -f html
  "extends": "../../../core/.eslintrc.legacy.json",
  "globals": {
    "Promise": true,
    "Blazy": true,
    "dBlazy": true,
    "Bio": true,
    "BioMedia": true
  },
  "rules": {
    "consistent-this": [0, "me"],
    "max-params": 0,
    "id-length": [1, {"min": 1}],
    // Warnings.
    "max-nested-callbacks": [1, 4]
  }
}
