{
    "name": "fourkitchens/sous-drupal-project",
    "description": "Starter project for Sous a Drupal distribution featuring a theme based on Emulsify Design System.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "vcs",
            "url": "https://gitlab.ewdev.ca/yonas.legesse/drupal-recipe-unpack.git"
        }
    ],
    "require": {
        "php": ">=8.1",
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/components": "^3.0@beta",
        "drupal/config_ignore": "^2.4",
        "drupal/core-composer-scaffold": "^10",
        "drupal/core-recommended": "^10",
        "drupal/csp": "^1.21",
        "drupal/ctools": "^4.0",
        "drupal/diff": "^1.1",
        "drupal/emulsify_twig": "^4.0",
        "drupal/field_group": "^3.1",
        "drupal/gin": "^3.0@alpha",
        "drupal/gin_toolbar": "^1.0@beta",
        "drupal/libraries": "^4.0",
        "drupal/login_history": "^2.0@alpha",
        "drupal/menu_block": "^1.0",
        "drupal/metatag": "^1.0",
        "drupal/pathauto": "^1.0",
        "drupal/redirect": "^1.0",
        "drupal/robotstxt": "^1.0",
        "drupal/role_delegation": "^1.2",
        "drupal/simple_sitemap": "^4.1",
        "drupal/spamspan": "^3.1",
        "drupal/taxonomy_manager": "^2.0",
        "drupal/twig_tweak": "^3.2",
        "drupal/views_ajax_history": "^1.7",
        "drush/drush": "^12.1",
        "ewcomposer/unpack": "dev-master",
        "oomphinc/composer-installers-extender": "^2.0",
        "webflo/drupal-finder": "^1.2",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "zaporylie/composer-drupal-optimizations": true,
            "oomphinc/composer-installers-extender": true,
            "drupal/core-project-message": true,
            "ewcomposer/unpack": true
        },
        "process-timeout": 0
    },
    "autoload": {
        "psr-4": {
            "Sous\\": "sous"
        }
    },
    "extra": {
        "installer-name": "sous",
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-types": [
            "npm-asset",
            "bower-asset",
            "drupal-recipe"
        ],
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/libraries/{$name}": [
                "type:npm-asset",
                "type:drupal-library",
                "vendor:bower-asset"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/recipes/{$name}": [
                "type:drupal-recipe"
            ]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "source": "https://git.drupalcode.org/project/drupal/raw/{version}/{path}",
            "allowed-packages": [
                "fourkitchens/sous-drupal-distro"
            ],
            "excludes": [
                ".eslintrc"
            ],
            "includes": [
                "sites/default/example.settings.my.php"
            ],
            "file-mapping": {
                "[web-root]/sites/example.settings.local.php": {
                    "append": "assets/scaffold/files/additions-example.settings.local.txt"
                },
                "[web-root]/sites/default/default.settings.php": {
                    "append": "assets/scaffold/files/additions-default.settings.txt"
                },
                "[web-root]/sites/development.services.yml": {
                    "mode": "replace",
                    "path": "assets/scaffold/files/development.services.yml",
                    "overwrite": false
                }
            },
            "omit-defaults": false
        },
        "patches": {
            "drupal/core": {
                "Allow application of recipes": "https://git.drupalcode.org/project/distributions_recipes/-/raw/patch/recipe.patch",
                "#3322547: Set a default message when extensions are missing": "https://git.drupalcode.org/project/distributions_recipes/-/merge_requests/45.patch"
            },
            "drupal/field_group": {
                "2969051 - HTML5 Validation Prevents Submission in Tabs": "https://www.drupal.org/files/issues/2023-04-24/2969051-99.patch",
                "2787179 - Ensure visibility of invalid fields (JS)": "https://www.drupal.org/files/issues/2023-04-07/2787179-highlight-html5-validation-85.patch"
            }
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "Sous\\Starter::sousPrep",
            "./scripts/sous/setup.sh",
        ],
        "build-assets": [
            "composer install --optimize-autoloader --no-dev",
            "@build-theme",
            "@build-storybook"
        ],
        "build-theme": [
            "npm ci --prefix web/themes/custom/sous-project",
            "npm run build --prefix web/themes/custom/sous-project"
        ],
        "build-storybook": [
            "npm run storybook-build --prefix web/themes/custom/sous-project",
            "mv ./web/themes/custom/sous-project/.out ./web/storybook"
        ],
        "lint": "npm run lint",
        "code-sniff": [
            "./vendor/bin/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,info,txt,md --ignore=node_modules,bower_components,vendor ./web/modules/custom",
            "./vendor/bin/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,info --ignore=node_modules,dist,bower_components,vendor ./web/themes/custom"
        ],
        "post-drupal-scaffold-cmd": [
            "cp web/sites/example.settings.local.php web/sites/default/settings.local.php"
        ]
    }
}
